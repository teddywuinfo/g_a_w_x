/* pages/photo/photo_comments.wxss */
.page{
    height: 100%;
}

.bg {
    width: 100%;
    height: 100%;
}

.default-bg {
    width: 100%;
    height: 100%;
    display: flex;
    justify-content: center;
}

.default-bg-txt {
    margin-top: 200rpx;
    color: #999999;
    text-align:center;
    font-size: 12pt;
}

.comment-item {
    /*width:100%;*/
    padding: 20rpx;
    border-bottom: 1px solid #f4f4f4;
    display: flex;
    flex-direction: row;
}

.comment-item:nth-child(1) {
    border-top: 1px solid #f4f4f4;
}

.avatar {
    width: 80rpx;
    height: 80rpx;
    margin-right: 10rpx;
}

.user-name-txt {
    width: 400rpx;
    line-height: 40rpx;
    font-size: 11pt;
    font-weight: bold;
    color: #4c7dcd;
    flex-grow: 1;
}

.comment-time-txt {
    width: 220rpx;
    text-align: right;
    line-height: 40rpx;
    font-size: 8pt;
    color: #999999;
}

.comment-content {
    line-height: 40rpx;
    width: 620rpx;
    font-size: 11pt;
}

.comment-bottom {
    width: 100%;
    height: 90rpx;
}


.input-container {
    width: 100%;
    height: 90rpx;
    position:fixed;
    bottom:0rpx;
    background-color: #f4f4f4;
    display: flex;
    justify-content: center;
    align-items: center;
}

.comment-input {
    width: 700rpx;
    height: 58rpx;
    line-height: 58rpx;
    padding-left: 10rpx;
    padding-right: 10rpx;
    background-color: white;
    font-size:14pt;
    border: 1px solid #f4f4f4; 
    border-radius: 20rpx;
}